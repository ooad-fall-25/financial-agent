generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NewsSummary {
  id         String  @id @default(uuid())
  userId     String
  headline   String
  aiRepsonse String
  provider   String
  category   String
  language   String
  url        String?

  isByCategory Boolean @default(false)
  isLiked      Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id        String    @id @default(uuid())
  userId    String
  title     String    @default("New Chat")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(uuid())
  userId    String
  role      String // "user" or "assistant"
  content   String
  thoughts  String?
  createdAt DateTime @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  medias Media[]
}

model Media {
  id        String @id @default(uuid())
  userId    String
  fileName  String
  mimeType  String
  sizeBytes BigInt

  extractedContext String

  s3Bucket String
  s3Key    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messageId String
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model PinnedNews {
  id          String   @id @default(uuid())
  userId      String
  title       String
  source      String
  url         String
  publishedAt DateTime
  summary     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, url]) // Ensures a user cannot pin the same URL twice
}

model Holding {
  id        String   @id @default(uuid())
  userId    String
  symbol    String
  quantity  Float
  avgCost   Float // User's average purchase price
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // distinct identifier to prevent duplicate rows for the same stock per user
  @@unique([userId, symbol])
}

model WatchlistItem {
  id        String   @id @default(uuid())
  userId    String
  symbol    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, symbol])
}
